  <body>

  <div class="container">
      <div class="navbar">
          <div class="logo">
            <img src="images/logo.png" alt="logo" width="125px">
          </div>
          <nav>
            <ul id="menuItems">
              <% for(var i=0; i < navLinks.length; i++) { %>
                <li><a href="<%= navLinks[i] %>"><%= navLinkLabel[i] %></a></li>
              <% } %>
            </ul>
          </nav>
          <img src="images/cart.png" alt="cart" width="30px" height="30px">
          <img src="images/menu.png" alt="cart" onclick="menuToggle()" class="menu-icon">
        </div>
      </div>
<!-- --------Account page--------- -->

<div class="account-page">
  <div class="container">
    <div class="row">
      <div class="col-2">
        <img src="images/image1.png" alt="" width="100%">
      </div>
      <div class="col-2">
        <div class="form-container" id="formcontainer">
          <div class="form-btn">
            <span onclick="Login()">Login</span>
            <span onclick="Register()">Register</span>
            <hr id="Indicator">
          </div>
          <form class="" id="LoginForm" action="/Login" method="post">
            <input type="text" name="uname" value=""placeholder="username" required>
            <input type="password" name="upass" value="" placeholder="password" required>
            <button type="submit" class="btn" name="button">Login</button>
            <a href="#">Forgot Password</a>
          </form>

          <form class="" id="RegForm" action="/Registration" method="post">
            <input type="text" name="uname" value="" placeholder="username" required>
            <input type="password" name="upass" value="" placeholder="password" required>
            <center>- User Details -<center>
            <input type="text" name="fullname" value="" placeholder="Full Name" required>
            <input type="text" name="address" value="" placeholder="Address" required>
            <input type="text" name="phone" value="" placeholder="Your Phone Number" required>
            <input type="email" name="email" value="" placeholder="email" required>
            <button type="submit" class="btn" name="button">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- --------footer-------- -->
